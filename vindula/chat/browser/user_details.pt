<metal:userdetails i18n:domain="vindula.chat"
	  tal:define="user_id view/user_id;
	              fullname view/fullname;
	              portal_url context/portal_url">
    
    <li tal:attributes="id string:online-users-${user_id};
                        data-userid user_id">
        
        <!--a href="#" class="user-details-toggle" title="Click para converçar com o usuário">
           <a href="javascript:void(0)" tal:attributes="onclick string: javascript:chatWith('${user_id}');
           												data-recipient view/jid;
           												id user_id;"
           								tal:content="fullname">Jon Doe</a>
        </a-->

		<div id="boxPortlet" class="info_boxTipo2 borderDif" tal:define="obj python:view.get_prefs_user(user_id)">
			<div class="row">
				<div class="portlet-user-image">
					<a href="javascript:void(0)" tal:attributes="onclick string: javascript:chatWith('${user_id}');
           														 data-recipient view/jid;
           														 id user_id;">
						<img src="defaultUser.png"
							  alt="" border="0"
							    width="28"
								height="28"
								tal:define="photo obj/photograph|nothing"
								tal:attributes="src python:view.getPhoto(photo);
								alt obj/name|nothing;
								title obj/name|nothing;" />
					</a>
				</div>
				<div class="portlet-user-info">
					<h4>
						<a href="javascript:void(0)" tal:attributes="onclick string: javascript:chatWith('${user_id}');
           														 data-recipient view/jid; id user_id;"
													  tal:content="obj/name|obj/username|nothing">func</a>
					</h4>
				</div>
			</div>
		</div>
    </li>
</metal:userdetails>
